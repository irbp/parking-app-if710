<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.signup.SignUpActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="93dp" tools:layout_editor_absoluteX="84dp"
            android:id="@+id/editTextSignUpName"
            android:hint="Nome"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="163dp" tools:layout_editor_absoluteX="84dp"
            android:id="@+id/editTextSignUpEmail"
            android:hint="E-mail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="231dp" tools:layout_editor_absoluteX="84dp"
            android:id="@+id/editTextSignUpPassword"
            android:hint="Senha"/>
    <CheckBox
            android:text="Aceito os termos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="293dp"
            tools:layout_editor_absoluteX="123dp" android:id="@+id/checkBoxTerms"/>
    <Button
            android:text="Registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="341dp"
            tools:layout_editor_absoluteX="147dp" android:id="@+id/buttonSignUp"/>
</android.support.constraint.ConstraintLayout>