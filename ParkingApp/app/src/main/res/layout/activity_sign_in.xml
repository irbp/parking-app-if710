<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SignInActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="108dp" tools:layout_editor_absoluteX="84dp"
            android:id="@+id/editTextSignInEmail"
            android:hint="E-mail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions|textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="177dp" tools:layout_editor_absoluteX="84dp"
            android:id="@+id/editTextSignInPassword"
            android:hint="Senha"/>
    <Button
            android:text="Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="230dp"
            tools:layout_editor_absoluteX="147dp" android:id="@+id/buttonSignIn"/>
    <Button
            android:text="Criar Conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="291dp"
            tools:layout_editor_absoluteX="135dp" android:id="@+id/buttonCreate"/>
    <Button
            android:text="Entrar com o Facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="350dp"
            tools:layout_editor_absoluteX="93dp" android:id="@+id/buttonFacebookSignIn"/>
    <Button
            android:text="Entrar com o Google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="412dp"
            tools:layout_editor_absoluteX="101dp" android:id="@+id/buttonGoogleSignIn"/>
</android.support.constraint.ConstraintLayout>